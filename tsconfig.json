{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "outDir": "build",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015.promise"]
  },
  "include": ["./src/**/*.ts", "src/db.config.js"],
  "exclude": ["./src/public/"]
}
